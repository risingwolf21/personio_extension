{
    "name": "Personio Extension",
    "description": "Calculate weekly hours in Personio",
    "content_scripts": [
        {
            "matches": [
                "https://*.personio.de/attendance/employee/*"
            ],
            "js": [
                "jquery.js",
                "content-script.js"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "webNavigation"
    ],
    "manifest_version": 2,
    "version": "1.1"
}